REMOVE = rm -f

DVI_FILE = ${DOC_FILE:.tex=.dvi}
PS_FILE  = ${DOC_FILE:.tex=.ps}
PDF_FILE = ${DOC_FILE:.tex=.pdf}

all: tex pdf

tex: $(DOC_FILE)
	@latex $(DOC_FILE); \
	bibtex ${DOC_FILE:.tex=}; \
	latex $(DOC_FILE); \
	latex $(DOC_FILE)

noref: $(DOC_FILE)
	latex $(DOC_FILE)

ps:
	dvips -o ${PS_FILE} ${DVI_FILE}

pdf:
	dvipdfm $(DVI_FILE)

clean:
	$(REMOVE) *.aux *.dvi *.log *.out *.bbl *.blg *.toc *.lof *.lot

realclean: clean
	$(REMOVE) ${PS_FILE} ${PDF_FILE}
